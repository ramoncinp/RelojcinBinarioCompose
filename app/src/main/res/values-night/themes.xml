<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RelojcinBinarioCompose" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_900_primary</item>
        <item name="colorPrimaryVariant">@color/indigo_900_dark</item>
        <item name="colorOnPrimary">@color/indigo_900_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarBackground">?attr/colorPrimaryVariant</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/statusBarBackground</item>
    </style>
</resources>